<style>
  section.overlay.cover.fullscreen {
    min-height:500px!important;
  }
</style>

<section class="cover fullscreen image-bg overlay">
  <div class="background-image-holder">
    <%= image_tag "home-2-5.jpg", class:"background-image", alt:"image" %>
  </div>
  <div class="container v-align-transform">
    <div class="row">
      <section>
        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
          <div class="feature bordered text-center">
            <h4 class="uppercase">Forgot Your Password?</h4>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'text-left', method: :post }) do |f| %>
              <%= devise_error_messages! %>

              <%= f.email_field :email, placeholder: "Email", autofocus: true %>

              <%= f.submit "Reset Password" %>

              <hr />
              <%= render "accounts/shared/links" %>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </div>
</section>
