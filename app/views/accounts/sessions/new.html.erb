<div class="login login-bg">
  <div class="container">
    <div class="login-logo text-center">
      <a href="#">
        <%= image_tag "logo.png", alt: "" %>
      </a>
    </div>
    <div class="login-box btn-rounded">
      <%= form_for(resource, html: { }, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="text-center">
          <h3>LOGIN</h3>
        </div>

        <div class="form-group">
          <%= f.email_field :email, placeholder:"Email", autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, placeholder:"Password", autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "Login", class: 'btn btn-small btn-dark-solid full-width btn-rounded' %>
        </div>

        <div class="login-social-link">
          <a href="index.html" class="facebook">
            Facebook
          </a>
          <a href="index.html" class="twitter">
            Twitter
          </a>
        </div>

        <div class="form-group">
          <%= f.check_box :remember_me %>
          <label for="checkbox1">Remember me</label>

          <%= render "accounts/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if false %>
<section class="cover fullscreen image-bg overlay">
  <div class="background-image-holder">
    <%= image_tag "home12.jpg", class:"background-image", alt:"image" %>
  </div>
  <div class="container v-align-transform">
    <div class="row">
      <section>
        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
          <div class="feature bordered text-center">
            <h4 class="uppercase">Login Here</h4>
            <%= form_for(resource, html: { class: 'text-left' }, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= f.email_field :email, placeholder:"Email", autofocus: true, class: "mb0" %>
              <%= f.password_field :password, placeholder:"Password", autocomplete: "off", class: "mb0" %>

              <%= f.submit "Log In" %>

              <% if devise_mapping.rememberable? -%>
              <span>Remember Me?</span>
              <div class="checkbox-option pull-right">
                <div class="inner"></div>
                <%= f.check_box :remember_me %>
              </div>
              <% end -%>

              <hr />
              <%= render "accounts/shared/links" %>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </div>
</section>
<% end %>
