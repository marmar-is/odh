<%- if controller_name != 'sessions' %>
  <p class="mb0">
    <span>Already Have An Account?</span>
    <%= link_to "Log in", new_session_path(resource_name), class:'pull-right', 'data-no-turbolink' => true %>
  </p>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="mb0">
    Don't Have An Account?
    <%= link_to "Sign Up", new_registration_path(resource_name), class:"pull-right", 'data-no-turbolink' => true %>
  </p>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="mb0">
    Forgot your password?
    <%= link_to "Reset It", new_password_path(resource_name), class:'pull-right', 'data-no-turbolink' => true %>
  </p>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p class="mb0">
    Didn't Receive Confirmation Email?
    <%= link_to "Resend", new_confirmation_path(resource_name), class:'pull-right', 'data-no-turbolink' => true %>
  </p>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <p class="mb0">
    Didn't Receive Unlock Instructions?
    <%= link_to "Resend", new_unlock_path(resource_name), class:'pull-right', 'data-no-turbolink' => true %>
  </p>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
